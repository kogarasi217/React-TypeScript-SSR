{
  "compilerOptions": {
      "outDir": "./dist/",
      "strict": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "jsx": "react",
      "baseUrl": "/",
      "paths": {
        "~/*": ["./src/*"],
        "@/*": ["./src/*"]
      }
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}